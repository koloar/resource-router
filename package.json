{
  "name": "angular-resource-router",
  "version": "1.0.0-alpha.1",
  "homepage": "https://github.com/mdvorak/resource-router",
  "author": "Michal Dvorak",
  "license": "MIT",
  "description": "Angular router for RESTful clients",
  "main": "bundles/resource-router.umd.js",
  "jsnext:main": "index.js",
  "module": "index.js",
  "typings": "index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mdvorak/resource-router.git"
  },
  "bugs": {
    "url": "https://github.com/mdvorak/resource-router/issues"
  },
  "keywords": [
    "angular",
    "angular2",
    "router",
    "rest"
  ],
  "private": true,
  "scripts": {
    "clean": "rimraf dist/ codegen/ src/**/*.js* src/**/*.d.ts example/app/example.bundle.* *.tgz *.tar.gz",
    "lint": "tslint -c tslint.json index.ts src/**/*.ts example/**/*.ts",
    "test": "karma start",
    "prestart": "npm run-script clean && tsc",
    "start": "concurrently \"tsc -w\" \"lite-server -c example/server.config.json\"",
    "compile": "ngc",
    "bundle": "rollup -c && uglifyjs dist/bundles/resource-router.umd.js -o dist/bundles/resource-router.umd.min.js",
    "prebuild": "npm run-script clean && npm run-script lint",
    "build": "concurrently \"npm test\" \"npm run-script compile\" && npm run-script bundle",
    "postbuild": "node release-package.js package.json dist/package.json && ncp LICENSE.txt dist/LICENSE.txt && ncp README.md dist/README.md && rimraf dist/codegen/",
    "release": "npm run-script build && npm publish dist",
    "postpublish": "npm run-script clean && git push && git push --tags",
    "preversion": "npm run-script lint && npm run-script test"
  },
  "dependencies": {
    "@angular/common": "^2.4.3",
    "@angular/compiler": "^2.4.3",
    "@angular/core": "^2.4.3",
    "@angular/http": "^2.4.3",
    "@angular/platform-browser": "^2.4.3",
    "core-js": "^2.4.1",
    "rxjs": "^5.0.1",
    "zone.js": "^0.7.2"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^2.4.3",
    "@angular/forms": "^2.4.3",
    "@angular/platform-browser-dynamic": "^2.4.3",
    "@types/core-js": "^0.9.35",
    "@types/jasmine": "^2.5.35",
    "@types/node": "^6.0.45",
    "chalk": "^1.1.3",
    "codelyzer": "^2.0.0-beta.4",
    "concurrently": "^3.1.0",
    "jasmine-core": "^2.4.1",
    "karma": "^1.3.0",
    "karma-jasmine": "^1.0.2",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-typescript": "^2.1.6",
    "lite-server": "^2.2.2",
    "ncp": "^2.0.0",
    "phantomjs-prebuilt": "^2.1.7",
    "plugin-typescript": "^4.0.1",
    "rimraf": "^2.5.2",
    "rollup": "^0.41.1",
    "systemjs": "^0.19.41",
    "tslint": "^4.3.1",
    "typescript": "~2.0.10",
    "uglify-js": "^2.7.5"
  },
  "engines": {
    "node": ">=4.0.0",
    "npm": ">=4.0.0"
  }
}
